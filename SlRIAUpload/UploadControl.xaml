<UserControl x:Class="SlRIAUpload.UploadControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200" d:DesignWidth="500" Name="ucUpload">
    
    <Grid x:Name="LayoutRoot" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="6">
            <TextBlock Text="Selected file:" Margin="6" Foreground="Yellow"/>
            <TextBlock Text="***********" Name="txtFilename" Foreground="Yellow" Margin="6"/>
            <ProgressBar Name="uploadProgress" Height="20" Grid.Row="0" SmallChange="1" Minimum="0" Maximum="100" Margin="6" />
            <TextBlock Text="0%" Name="txtProgress" Margin="6" Foreground="Yellow" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnSelect" Width="70" Height="25" Margin="6" Content="Select file" Click="btnSelect_Click" />
        </StackPanel>
    </Grid>
</UserControl>
